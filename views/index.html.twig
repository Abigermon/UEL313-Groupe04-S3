{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
<!-- Onglet -->
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="tab-1" data-toggle="tab" href="#content-1" role="tab" aria-controls="content-1" aria-selected="true">Explorez nos Liens</a>
    </li>
</ul>

<!-- Contenu de l'onglet -->
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="content-1" role="tabpanel" aria-labelledby="tab-1">
        <div class="row custom-card">
            {% for link in links %}
                <div class="col-md-4 card">
                    <h2><a class="linkTitle" href="{{ path('link', { 'id': link.id }) }}">{{ link.title }}</a></h2>
                    <p>{{ link.desc }}</p>
                    <a href="{{ link.url }}" title="" target="_blank">Open ></a>
                    <em>(by {{ link.user.username }})</em>

                    {% for tag in link.tags %}
                        <a href="{{ path('tag', { 'id': tag.id }) }}" title="Filtrer">
                            {{ tag.title }}
                        </a>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
